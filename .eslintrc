{
  "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "standard",
    "promise",
    "react"
    ],
    "extends": ["eslint:recommended"],
    "rules": {
      "react/jsx-uses-react": 1,
      "no-console": 0,
      "semi": 2,
      "jsx-quotes": [2, "prefer-single"],
      "max-len": [2, 120, 2],
      "indent": [2, 2],
      "no-multiple-empty-lines": 2,
      "object-curly-spacing": [2, "always"],
      "space-infix-ops": [2, {"int32Hint": true}],
      "key-spacing": [2, {
        "multiLine": {
          "beforeColon": false,
          "afterColon": true
        },
        "align": {
          "beforeColon": true,
          "afterColon": true,
          "on": "colon"
        }
      }]
    }
}
